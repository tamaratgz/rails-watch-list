<h1><%= @list.name %></h1>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
      <strong>Movie:</strong>
      <%= Movie.find(bookmark.movie_id).title %>
      <strong>Comment:</strong>
      <%= bookmark.comment %>
      <%= link_to "Delete bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to lists", lists_path %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
